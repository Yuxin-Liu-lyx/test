{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
     "data": {"url": "https://raw.githubusercontent.com/Yuxin-Liu-lyx/test/main/Income%20Increase.csv"},
     "vconcat": [{
     "width": "container",
     "height": "container",
     "title":"Trand of Income in Australia",
     "mark": "area",
     "encoding": {
         "color":{"value":"#BA8A9A"},
       
     "x": {
     "field": "Period",
     "type": "temporal",
     "scale": {"domain": {"param": "brush"}},
     "axis": {"title": ""}
     },
     "y": {"field": "Persons ($)", "type": "quantitative"}
     }
     }, 
     {
     "width": "container",
     "height": 60,
     "mark": "line",
     "params": [{
     "name": "brush",
     "select": {"type": "interval", "encodings": ["x"]}
     }],
     "encoding": {
         "color":{"value":"#BA8A9A"},
     "x": {
     "field": "Period",
     "type": "temporal"
     },
     "y": {
     "field": "Persons ($)",
     "type": "quantitative",
     "axis": {"tickCount": 3, "grid": false}
     }
     }
     }]
     }
